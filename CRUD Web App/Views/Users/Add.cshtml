@model CRUD_Web_App.Models.AddUsersView

@{
    
}

<h2>Add a User</h2>
<form method="post" action="Add" class="mt-4">
   <div class="mb-4">
        <label for="Name" class="form-label h6">
            Name
        <input type="text" class="form-control" id="Name" asp-for="Name">
    </div>

    <div class="mb-4">
        <label for="Email" class="form-label h6">
            Email
        <input type="email" class="form-control" id="Email" asp-for="Email">
    </div>

    <div class="mb-4">
        <label for="Salary" class="form-label h6">
            Salary
            <input type="number" class="form-control" id="Salary" asp-for="Salary">
    </div>

    <div>
        <select class="form-select" aria-label="Default select example">
            @foreach(var dept in Model.dept)
            {
                <option selected>Open this select menu</option>
                <option value="@dept.Id">@dept.DepartmentName</option>
            }

        </select>
    </div>

